


<h2>Add a comment: </h2>


<%= form_with(model: [ @article, @article.comments.build ], local: true) do |form| %>

<% if @article.comments.last.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.comments.last.errors.count, "error") %> 
        :
      </h2>
      <ul>
        <% @article.comments.last.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
